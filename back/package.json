{
  "name": "mentorhub-backend",
  "version": "1.0.0",
  "description": "Backend de MentorHub (Proyecto Final)",
  "author": "Nass",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "start:nest": "nest start",
    "start:dev": "npx nest start --watch",
    "start": "node dist/main.js",
    "build": "tsc && node copy-seeds.js",
    "migration:run": "npx typeorm migration:run -d ./src/config/typeorm.ts",
    "migration:generate": "npx typeorm migration:generate -d ./src/config/typeorm.ts src/migrations/nombre-de-la-migracion",
    "migration:revert": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d ./src/config/typeorm.ts",
    "seed:reset": "ts-node -r tsconfig-paths/register src/seeder/seed-reset.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/common": "^10.2.3",
    "@nestjs/config": "3.1.1",
    "@nestjs/core": "^10.2.3",
    "@nestjs/jwt": "^10.0.1",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.2.3",
    "@nestjs/platform-socket.io": "^10.4.17",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/typeorm": "^10.0.0",
    "@nestjs/websockets": "^10.2.6",
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "chart.js": "^4.4.9",
    "chartjs-node-canvas": "^5.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cloudinary": "^1.41.3",
    "cookie-parser": "^1.4.7",
    "multer-storage-cloudinary": "^4.0.0",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.3",
    "passport": "^0.7.0",
    "passport-github": "^1.1.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.0",
    "reflect-metadata": "^0.1.13",
    "resend": "^4.5.1",
    "rxjs": "^7.8.2",
    "socket.io": "^4.8.1",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.23"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^10.4.17",
    "@types/axios": "^0.9.36",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.2",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.11.30",
    "@types/node-fetch": "^2.6.12",
    "@types/nodemailer": "^6.4.17",
    "@types/passport-github": "^1.1.12",
    "@types/passport-github2": "^1.2.9",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-jwt": "^4.0.1",
    "eslint": "^9.0.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
